<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="MENGHITUNG BERAT BADAN IDEAL"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nama"
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Nama"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul" />

    <EditText
        android:id="@+id/TB"
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="Tinggi Badan"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul" />

    <RadioGroup
        android:layout_width="324dp"
        android:layout_height="68dp"
        android:layout_marginTop="268dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rPR"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Perempuan"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rLK"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="-40dp"
            android:text="Laki Laki"
            android:textSize="16sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/jkup"
        android:layout_width="66dp"
        android:layout_height="35dp"
        android:layout_marginEnd="64dp"
        android:text="CM"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/TB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/JK"
        android:layout_width="211dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Jenis Kelamin"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/jkup"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TB"
        app:layout_constraintTop_toBottomOf="@+id/TB" />

    <Button
        android:id="@+id/btnproses"
        android:layout_width="193dp"
        android:layout_height="50dp"
        android:layout_marginTop="224dp"
        android:text="Proses"
        app:layout_constraintEnd_toEndOf="@+id/nama"
        app:layout_constraintStart_toStartOf="@+id/nama"
        app:layout_constraintTop_toBottomOf="@+id/nama" />

    <TextView
        android:id="@+id/Hasil"
        android:layout_width="121dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:text="Hasil"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnproses"
        app:layout_constraintStart_toStartOf="@+id/btnproses"
        app:layout_constraintTop_toBottomOf="@+id/btnproses" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="127dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnproses"
        app:srcCompat="@drawable/kotak" />


</androidx.constraintlayout.widget.ConstraintLayout>